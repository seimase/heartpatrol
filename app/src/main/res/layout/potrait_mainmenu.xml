<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/tool_bar"
        android:id="@+id/tool_bar"/>


    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/btnPremium"
            android:layout_toStartOf="@+id/btnPremium">

            <ImageView
                android:layout_marginLeft="@dimen/space_5"
                android:src="@drawable/calender"
                android:tint="@color/colorAccent"
                android:layout_width="@dimen/space_20"
                android:layout_height="match_parent" />

            <ui.CustomtextView
                font:name = "Avenir_Heavy"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/space_5"
                android:text="Valid until:"
                android:gravity="fill_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ui.CustomtextView
                font:name = "Avenir_Book"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/space_5"
                android:text="20 September 2016"
                android:gravity="fill_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ui.CustomtextView
            font:name = "Avenir_Book"
            android:text="PREMIUM"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_marginRight="@dimen/space_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:id="@+id/btnPremium" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_140"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/bottom_navigation"
        android:background="@color/colorAccent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_alignTop="@+id/imageView7"
            android:layout_alignBottom="@+id/imageView7"
            android:layout_toRightOf="@+id/imageView7"
            android:id="@+id/relativeLayout15">

            <ui.CustomtextView
                font:name = "Avenir_Light"
                android:text="TAP ANYWERE TO START RECORDING"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/space_16"
                android:id="@+id/view"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/space_10" />

        </RelativeLayout>

        <ui.CircleImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/space_70"
            android:layout_height="@dimen/space_70"
            android:src="@drawable/heart"
            app:view_backgroundColor="@color/white"
            app:view_shadowRadius="4dp"
            app:view_shadowDx="2dp"
            app:view_shadowDy="0dp"
            app:view_shadowColor="@color/grey"
            app:view_borderWidth="0dp"
            app:view_selectedColor="@color/colorPrimary"
            app:view_borderColor="@android:color/darker_gray"
            android:layout_marginBottom="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ui.CustomtextView
            font:name = "Avenir_Black"
            font:type = "bold"
            android:text="Hi, Ronald"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/space_28"
            android:id="@+id/view3"
            android:layout_above="@+id/relativeLayout15"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/imageView7"
            android:layout_alignStart="@+id/imageView7" />
    </RelativeLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/uff_profile"
                    android:tint="@color/b7_orange"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/space_16"
                    android:layout_weight="1"/>

                <ui.CustomtextView
                    font:name = "Avenir_Book"
                    android:text="Profile"
                    android:gravity="fill_vertical|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>

            </LinearLayout>

            <View
                android:background="@color/grey_s"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/uff_ecg_result"
                    android:tint="@color/blue2"
                    android:layout_margin="@dimen/space_16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ui.CustomtextView
                    font:name = "Avenir_Book"
                    android:text="ECG Result"
                    android:gravity="fill_vertical|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>
            </LinearLayout>

            <View
                android:background="@color/grey_s"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/uff_ecg_review"
                    android:tint="@color/red_deep"
                    android:layout_margin="@dimen/space_16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ui.CustomtextView
                    font:name = "Avenir_Book"
                    android:text="ECG Review"
                    android:gravity="fill_vertical|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>

            </LinearLayout>

            <View
                android:background="@color/grey_s"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/uff_store"
                    android:tint="@color/blue"
                    android:layout_margin="@dimen/space_16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ui.CustomtextView
                    font:name = "Avenir_Book"
                    android:text="Store"
                    android:gravity="fill_vertical|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:src="@drawable/uff_transaction"
                    android:tint="@color/Green_atena"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/space_16"
                    android:layout_weight="1"/>

                <ui.CustomtextView
                    font:name = "Avenir_Book"
                    android:text="Transaction"
                    android:gravity="fill_vertical|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>

            </LinearLayout>

            <View
                android:background="@color/grey_s"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/uff_setting"
                    android:tint="@color/b7_coklat"
                    android:layout_margin="@dimen/space_16"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ui.CustomtextView
                    font:name = "Avenir_Book"
                    android:text="Setting"
                    android:gravity="fill_vertical|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>
            </LinearLayout>
            <View
                android:background="@color/grey_s"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            </LinearLayout>
        </LinearLayout>

        <View
            android:background="@color/grey_s"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true" />

    </LinearLayout>


</LinearLayout>