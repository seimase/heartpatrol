<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/transparant_pure">


    <LinearLayout
        android:layout_margin="@dimen/space_70"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/btn_shape"
        android:layout_width="@dimen/space_225"
        android:layout_height="match_parent">

        <ui.CustomtextView
            android:layout_marginTop="@dimen/space_10"
            font:name = "Avenir_Heavy"
            android:textColor="@color/white"
            android:text="Start in"
            android:textSize="@dimen/space_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ui.CustomtextView
                font:name = "Avenir_Heavy"
                android:id="@+id/text_timer"
                android:textColor="@color/white"
                android:text="1"
                android:textSize="@dimen/space_100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_10"/>
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>