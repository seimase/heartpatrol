<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ui.CustomtextView
        font:name = "Avenir_Light"
        android:textSize="@dimen/space_22"
        android:textColor="@color/blue"
        android:text="@string/profile_change_to_ft"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view22"
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginRight="@dimen/space_5" />

    <ui.CustomtextView
        font:name = "Avenir_Light"
        android:textSize="@dimen/space_22"
        android:text="My Height is"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/space_10"
        android:id="@+id/view26" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_65"
        android:layout_below="@+id/view27"
        android:id="@+id/relativeLayout14"
        android:layout_alignLeft="@+id/view26"
        android:layout_alignStart="@+id/view26"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/space_50"
        android:layout_marginRight="@dimen/space_50"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_m" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/grey_m"
            android:layout_alignParentBottom="true"
            android:id="@+id/textView7" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_m"
            android:id="@+id/textView5" />
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_m"
            android:layout_alignParentRight="true"
            android:id="@+id/textView6" />

        <ui.widget.RulerView
            android:id="@+id/ruler_view"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="top"
            app:begin="0"
            app:end="100"
            app:textColor="@android:color/holo_blue_dark"
            app:selectedColor="@android:color/holo_blue_bright"
            app:indicateColor="@android:color/holo_blue_dark"
            app:indicatePadding="10dp"
            app:textSize="@dimen/space_22"
            app:indicateWidth="5dp"
            android:layout_alignBottom="@+id/textView7"
            android:layout_marginBottom="@dimen/space_3"
            android:foregroundGravity="center|fill"
            android:layout_centerVertical="true" />


    </RelativeLayout>

    <View
        android:layout_width="5dp"
        android:layout_height="15dp"
        android:background="@color/colorAccent"
        android:id="@+id/view27"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"></View>

    <RelativeLayout
        android:layout_width="@dimen/space_70"
        android:layout_height="@dimen/space_70"
        android:id="@+id/imageView8"
        android:layout_below="@+id/view26"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_circle" >

        <ui.CustomtextView
            font:name = "Avenir_Light"
            font:type = "bold"
            android:textColor="@color/white"
            android:text="162"
            android:textSize="@dimen/space_30"
            android:id="@+id/text_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
    </RelativeLayout>

    <ui.CustomtextView
        android:id="@+id/btn_next"
        android:layout_width="@dimen/space_187"
        android:layout_height="@dimen/space_60"
        android:background="@drawable/btn_shape"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/Next"
        android:textColor="#ffffff"
        android:textSize="@dimen/space_20"
        font:name="Avenir_Heavy"
        android:layout_gravity="right"
        android:layout_below="@+id/relativeLayout14"
        android:layout_alignRight="@+id/view22"
        android:layout_alignEnd="@+id/view22"
        android:layout_marginTop="@dimen/space_5"
        android:layout_marginRight="@dimen/space_16" />
</RelativeLayout>